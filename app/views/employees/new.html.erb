<h1>Create Employee</h1>

<%= form_with model: employee, url: employees_path, method: :post, local: true, scope: :employee do |form| %>
    
    <div>
        <%= form.label :first_name %> <br>
        <%= form.text_field :first_name %>
    </div>

    <div>
        <%= form.label :last_name %> <br>
        <%= form.text_field :last_name %>
    </div>

    <div>
        <%= form.label :dob %><br>
        <%= form.date_select :dob, start_year: 1900, end_year: Date.today.year %>
    </div>

    <div>
        <%= form.label :job_title %> <br>
        <%= form.text_field :job_title %>
    </div>

    <%= form.submit "Submit" %>
<% end %>
